             xmlns:local="clr-namespace:WandD_nodate"
             x:Class="WandD_nodate.MainPage"
             xmlns:xf="clr-namespace:BottomBar.XamarinForms;assembly=BottomBar.XamarinForms"
             xmlns:views="clr-namespace:WandD_nodate.Views" 
                  BarTextColor="#0D47A1">

    <NavigationPage Title="Сегодня" Icon="today.png" BarBackgroundColor="#1565C0" >
